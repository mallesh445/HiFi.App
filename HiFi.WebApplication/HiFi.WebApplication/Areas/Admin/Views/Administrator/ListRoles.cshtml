@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
    <head>
        @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">*@
    </head>
<section class="container-fluid">
    <div class="panel panel-body">
        <h2>All Roles</h2>
        @if (Model.Any())
        {
            <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administrator">
                Add Role
            </a>
            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id : @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name </h5>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administrator"
                           asp-route-id="@role.Id">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet.
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create new role.
                    </h5>
                    <a class="btn btn-info" style="width:auto">
                        Create Role
                    </a>
                </div>
            </div>
        }

    </div>
</section>

