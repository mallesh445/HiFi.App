@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="well">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a New Account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-inline">
                    <label asp-for="Input.FirstName" style="padding-right: 57px;padding-top:15px;"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-inline">
                    <label asp-for="Input.LastName" style="padding-right: 58px;padding-top:15px;"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-inline">
                    <label asp-for="Input.Email" style="padding-right: 92px;padding-top:15px;"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-inline">
                    <label asp-for="Input.Password"  style="padding-right: 66px;padding-top:15px;"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-inline">
                    <label asp-for="Input.ConfirmPassword" style="padding-right: 16px;padding-top:15px;"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-inline">
                    <label asp-for="Input.PhoneNumber" style="padding-right: 35px;padding-top:15px;"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left: 133px;margin-top: 20px;">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
