@model HiFi.WebApplication.Areas.Admin.ViewModels.SubCategoryOneViewModel
@using HiFi.WebApplication.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_ALayout.cshtml";

    //var categoriesList = ViewBag.CategoryList;
}

<section class="container-fluid">
    <div class="content panel-body">
        <h2 class="MainHeaderColor">Add SubCategory</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, "Category", new { @class = "control-label col-md-2" })

                        <select asp-for="CategoryId" class="form-control"
                                asp-items="Model.MyCategoryList.ToCatSelectListItem(Model.CategoryId)"></select>
                        @*@Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)categoriesList, new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(model => model.CategoryId)
                    </div>
                    <div class="form-group">
                        <label asp-for="SubCategoryName" class="control-label"></label>
                        <input asp-for="SubCategoryName" class="form-control" />
                        <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DisplayOrder" class="control-label"></label>
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedDate" class="control-label"></label>
                        <input asp-for="CreatedDate" class="form-control" id="dateCreated" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdatedDate" class="control-label"></label>
                        <input asp-for="UpdatedDate" class="form-control" id="dateUpdated" />
                        <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    @*<div class="form-group"><label>Choose Image </label><input type="file" class="form-control" name="postedImageFile" id="imageId" placeholder="Id" /> </div>*@
                    <div class="form-group">
                        <label>Choose Image </label>
                        <input type="file" class="form-control" name="images" value="" multiple="multiple" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</section>
<script>

</script>