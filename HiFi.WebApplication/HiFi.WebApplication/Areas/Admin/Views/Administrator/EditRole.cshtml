
@model HiFi.WebApplication.Areas.Admin.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<section class="container-fluid">
    <div class="panel panel-body">
        <h2>Edit Roles</h2>
        <form asp-action="EditRole" method="post" class="mt-3">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Users in this Role: </h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at this moment.</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="EditUsersInRole" asp-controller="Administrator"
                       asp-route-Id="@Model.Id"
                       class="btn btn-primary" style="width:auto">
                        Add Users or Remove Users
                    </a>
                    @*<a asp-action="EditUsersInRole" asp-controller="Administrator"
                           asp-route-id="@Model.Id"
                           class="btn btn-primary" style="width:auto">
                        Add Users or Remove Users</a>*@
                </div>
            </div>
        </form>
    </div>
</section>
