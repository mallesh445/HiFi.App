@model HiFi.WebApplication.Areas.Admin.ViewModels.SubCategoryOneViewModel
@using HiFi.WebApplication.Extensions

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_ALayout.cshtml";
}

<section class="container-fluid">
    <div class="panel-heading panel-body MainHeaderColor">
        <h3>Edit <b>@Model.SubCategoryName</b> Sub Category</h3>
    </div>
    <div class="content panel-body">
        <div class="row">
            <div>
                <form asp-action="Edit">
                    <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.CategoryId, "Category", new { @class = "control-label col-md-2" })
                            <select asp-for="CategoryId" class="form-control"
                                    asp-items="Model.MyCategoryList.ToCatSelectListItem(Model.CategoryId)"></select>
                            @Html.ValidationMessageFor(model => model.CategoryId)
                        </div>
                        <input type="hidden" asp-for="SubCategoryOneId" />
                        <div class="form-group">
                            <label asp-for="SubCategoryName" class="control-label"></label>
                            <input asp-for="SubCategoryName" class="form-control" />
                            <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DisplayOrder" class="control-label"></label>
                            <input asp-for="DisplayOrder" class="form-control" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedDate" class="control-label"></label>
                            <input asp-for="CreatedDate" class="form-control" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedDate" class="control-label"></label>
                            <input asp-for="UpdatedDate" class="form-control" />
                            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="SC_ImageName" class="control-label"></label>
                            <input asp-for="SC_ImageName" class="form-control" />
                            <span asp-validation-for="SC_ImageName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SC_ImagePath" class="control-label"></label>
                            <input asp-for="SC_ImagePath" class="form-control" />
                            <span asp-validation-for="SC_ImagePath" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-6">
                        <div>
                            <label>Picture : </label>
                            @if (Model.ImagePath != null && !string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <div>
                                    <img src="@Model.ImagePath" width="90%"
                                         style="height: 450px; width: 270px;" />
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </div>
</section>
