@inject HiFi.WebApplication.Areas.Admin.Services.Profile.ProfileManager ProfileManager

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                @if(@ProfileManager.CurrentUser!=null && !string.IsNullOrEmpty(@ProfileManager.CurrentUser.UserName)){
                    <p>@ProfileManager.CurrentUser.UserName</p>
                }
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview @(Html.IsMenuActive("/Dashboards") ? "active" : "")">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Dashboards</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@(Html.IsMenuActive("/Admin/Dashboards/Dashboard1") ? "active" : "")"><a href="~/Admin/Dashboards/Dashboard1"><i class="fa fa-circle-o"></i> Dashboard v1</a></li>
                    <li class="@(Html.IsMenuActive("/Admin/Dashboards/Dashboard2") ? "active" : "")"><a href="~/Admin/Dashboards/Dashboard2"><i class="fa fa-circle-o"></i> Dashboard v2</a></li>
                </ul>
            </li>
            <li class="treeview @(Html.IsMenuActive("/Settings") ? "active" : "")">
                <a href="#">
                    <i class="fa fa-gear"></i>
                    <span>Settings</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Settings/Profile"><i class="fa fa-user"></i> Profile</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Account") ? "active" : "")"><a href="~/Settings/Account"><i class="fa fa-lock"></i> Account</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Security") ? "active" : "")"><a href="~/Settings/Security"><i class="fa fa-user-secret"></i> Security</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/History") ? "active" : "")"><a href="~/Settings/History"><i class="fa fa-history"></i> History</a></li>
                </ul>
            </li>
            <li class="@(Html.IsMenuActive("/Widgets") ? "active" : "")">
                <a href="~/Admin/Default/Index">
                    <i class="fa fa-th"></i> <span>Default</span>
                    <span class="pull-right-container">
                        <small class="label pull-right bg-green">Hot</small>
                    </span>
                </a>
            </li>
            <li class="treeview @(Html.IsMenuActive("/Admin/Category") ? "active" : "")">
                <a href="#">
                    <i class="fa fa-pie-chart"></i>
                    <span>Category</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                        <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i> Category</a>
                    </li>
                    <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                        <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i> Category</a>
                    </li>
                </ul>
            </li>
            <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i>Sub Category 1</a>
            </li>
            <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i>Sub Category 2</a>
            </li>
            <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i> Order</a>
            </li>
            <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i> Users</a>
            </li>
            <li class="@(Html.IsMenuActive("/Admin/Category/Index") ? "active" : "")">
                <a href="~/Admin/Category/Index"><i class="fa fa-circle-o"></i> Users</a>
            </li>

            <li class="header">LABELS</li>
            <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>Important</span></a></li>
            <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>Warning</span></a></li>
            <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>Information</span></a></li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>