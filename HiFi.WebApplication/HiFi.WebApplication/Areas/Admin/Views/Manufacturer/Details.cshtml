@model HiFi.Data.Models.Manufacturer

@{
    ViewData["Title"] = "Details";
}

<section class="container-fluid">
    <div class="panel-heading panel-body MainHeaderColor">
        <h4>@Model.Name Manufacturer Details</h4>
    </div>
    <div class="content panel-body">
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MetaKeywords)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayNameFor(model => model.MetaKeywords)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MetaDescription)
                    </dt>
                    <dd class="col-sm-10">

                        @Html.DisplayFor(model => model.MetaDescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MetaTitle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MetaTitle)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DisplayOrder)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DisplayOrder)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdatedDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdatedDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>
                </dl>
            </div>
            <div class="col-md-3">
                <div>
                    <label>Logo : </label>
                    @if (Model.ImagePath != null && !string.IsNullOrEmpty(@Model.ImagePath))
                    { 
                            <img src="@Model.ImagePath" style="height: 320px; width: 260px;" /> 
                    }
                    else
                    {
                        <div>
                            <img src="\Images\default-manufacturer.jpg" style="height: 320px; width: 260px;" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <a asp-action="Edit" asp-route-id="@Model.ManufacturerId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</section>