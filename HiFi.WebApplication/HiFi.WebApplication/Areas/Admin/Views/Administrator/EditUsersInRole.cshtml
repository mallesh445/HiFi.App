@model List<HiFi.WebApplication.Areas.Admin.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<section class="container-fluid">
    <div class="panel panel-body">
        <form method="post" class="mt-3">
            <div class="card">
                <div class="card-header">
                    <h3>Add or Remove Users from this Role </h3>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].UserName" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label">
                                @Model[i].UserName
                            </label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <input type="hidden" asp-for="@roleId" />
                    <input type="submit" value="Update" class="btn btn-primary" asp-route-id="@roleId" style="width:auto" />
                    <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger" style="width:auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>